<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardRoot"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:cardCornerRadius="12dp"
        android:layout_margin="12dp"
        android:background="#EFEFFF"
        app:cardElevation="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintVertical_bias="0.5">

        <!-- Use a ConstraintLayout inside the card so we can pin a bottom button bar while keeping scrollable content above it -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <!-- Make main content scrollable; constrain its bottom to the top of the button bar -->
            <androidx.core.widget.NestedScrollView
                android:id="@+id/mainScroll"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:fillViewport="true"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toTopOf="@id/buttonBarPage1">

                <LinearLayout
                    android:id="@+id/container"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <!-- Overlay container for pages so they can animate smoothly (overlap) -->
                    <FrameLayout
                        android:id="@+id/pagesContainer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <!-- Page 1 -->
                        <LinearLayout
                            android:id="@+id/page1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tvDrugName"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textSize="38sp"
                                android:textStyle="bold"
                                android:textColor="#393D99"
                                android:layout_marginBottom="12dp"
                                android:gravity="center"/>

                            <!-- form label -->
                            <TextView
                                android:id="@+id/tvFormLabel"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/dialog_form_label"
                                android:textSize="28sp"
                                android:textStyle="bold"
                                android:layout_marginBottom="8dp"
                                android:textColor="#333333"/>

                            <!--  form selection: use a real Spinner so the list is a regular scrollable dropdown -->
                            <androidx.recyclerview.widget.RecyclerView
                                android:id="@+id/recyclerForm"
                                android:layout_width="match_parent"
                                android:layout_height="200dp"
                                android:overScrollMode="always"
                                android:scrollbars="vertical"
                                android:contentDescription="@string/select_form" />

                        </LinearLayout>

                        <!-- Page 2 -->
                        <LinearLayout
                            android:id="@+id/page2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:visibility="gone"
                            android:layout_marginTop="8dp">

                            <TextView
                                android:id="@+id/tvDrugNamePage2"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textSize="38sp"
                                android:textStyle="bold"
                                android:textColor="#393D99"
                                android:layout_marginBottom="12dp"
                                android:gravity="center"/>


                            <TextView
                                android:id="@+id/tvFormStrengthUnitLabel"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/additional_info"
                                android:textSize="28sp"
                                android:textStyle="bold"
                                android:layout_marginBottom="8dp"
                                android:textColor="#333333"/>

                            <com.google.android.material.textfield.TextInputLayout
                                android:id="@+id/tilStrength"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="@string/strength_required"
                                app:boxBackgroundMode="outline"
                                app:boxBackgroundColor="@android:color/transparent"
                                app:boxStrokeColor="@color/til_strength_box_color"
                                app:boxStrokeWidth="2dp"
                                app:boxStrokeWidthFocused="2dp"
                                app:hintTextColor="@color/til_strength_box_color">
                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/etStrength"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:inputType="numberDecimal"/>
                            </com.google.android.material.textfield.TextInputLayout>

                            <!-- Divider between strength and unit list -->
                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:background="#E0E0E0"
                                android:layout_marginTop="8dp"
                                android:layout_marginBottom="8dp" />

                            <com.google.android.material.textfield.TextInputLayout
                                android:id="@+id/tilUnit"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="@string/unit_required"
                                android:layout_marginTop="8dp"
                                app:boxBackgroundMode="none">

                                <!-- Use RecyclerView for unit selection  -->
                                <androidx.recyclerview.widget.RecyclerView
                                    android:id="@+id/recyclerUnit"
                                    android:layout_width="match_parent"
                                    android:layout_height="120dp"
                                    android:overScrollMode="always"
                                    android:scrollbars="vertical"
                                    android:contentDescription="@string/unit_required" />
                            </com.google.android.material.textfield.TextInputLayout>

                        </LinearLayout>

                        <!-- Page 3: Frequency selection -->
                        <LinearLayout
                            android:id="@+id/page3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:visibility="gone"
                            android:layout_marginTop="8dp">

                            <TextView
                                android:id="@+id/tvDrugNamePage3"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textSize="38sp"
                                android:textStyle="bold"
                                android:textColor="#393D99"
                                android:layout_marginBottom="12dp"
                                android:gravity="center"/>

                            <TextView
                                android:id="@+id/tvScheduleLabel"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/schedule_label"
                                android:textSize="28sp"
                                android:textStyle="bold"
                                android:layout_marginBottom="8dp"
                                android:textColor="#333333"/>

                            <RadioGroup
                                android:id="@+id/rgFrequencyOptions"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <RadioButton
                                    android:id="@+id/rbAsNeeded"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:buttonTint="@color/radio_tint"
                                    android:text="@string/as_needed" />

                                <RadioButton
                                    android:id="@+id/rbEveryDay"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:buttonTint="@color/radio_tint"
                                    android:text="@string/everyday" />

                                <RadioButton
                                    android:id="@+id/rbSpecificWeekDay"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:buttonTint="@color/radio_tint"
                                    android:text="@string/on_specific_week_day" />
                            </RadioGroup>

                            <com.google.android.material.chip.ChipGroup
                                android:id="@+id/chipGroupWeekDays"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="12dp"
                                app:singleSelection="false"
                                app:singleLine="true"
                                android:visibility="gone"
                                app:chipSpacing="6dp">

                                <com.google.android.material.chip.Chip
                                    android:id="@+id/chipSu"
                                    android:layout_width="40dp"
                                    android:layout_height="40dp"
                                    android:gravity="center"
                                    android:text="@string/chip_su"
                                    android:textSize="12sp"
                                    android:checkable="true"
                                    app:chipMinHeight="40dp"
                                    app:chipCornerRadius="20dp"
                                    app:chipBackgroundColor="@color/chip_bg"
                                    app:chipStrokeColor="@color/chip_stroke_color"
                                    app:chipStrokeWidth="2dp"
                                    android:textColor="@color/chip_text_color"
                                    app:checkedIconEnabled="false"
                                    app:ensureMinTouchTargetSize="false" />

                                <com.google.android.material.chip.Chip
                                    android:id="@+id/chipMo"
                                    android:layout_width="40dp"
                                    android:layout_height="40dp"
                                    android:gravity="center"
                                    android:text="@string/chip_mo"
                                    android:textSize="12sp"
                                    android:checkable="true"
                                    app:chipMinHeight="40dp"
                                    app:chipCornerRadius="20dp"
                                    app:chipBackgroundColor="@color/chip_bg"
                                    app:chipStrokeColor="@color/chip_stroke_color"
                                    app:chipStrokeWidth="2dp"
                                    android:textColor="@color/chip_text_color"
                                    app:checkedIconEnabled="false"
                                    app:ensureMinTouchTargetSize="false" />

                                <com.google.android.material.chip.Chip
                                    android:id="@+id/chipTu"
                                    android:layout_width="40dp"
                                    android:layout_height="40dp"
                                    android:gravity="center"
                                    android:text="@string/chip_tu"
                                    android:textSize="12sp"
                                    android:checkable="true"
                                    app:chipMinHeight="40dp"
                                    app:chipCornerRadius="20dp"
                                    app:chipBackgroundColor="@color/chip_bg"
                                    app:chipStrokeColor="@color/chip_stroke_color"
                                    app:chipStrokeWidth="2dp"
                                    android:textColor="@color/chip_text_color"
                                    app:checkedIconEnabled="false"
                                    app:ensureMinTouchTargetSize="false" />

                                <com.google.android.material.chip.Chip
                                    android:id="@+id/chipWe"
                                    android:layout_width="40dp"
                                    android:layout_height="40dp"
                                    android:gravity="center"
                                    android:text="@string/chip_we"
                                    android:textSize="12sp"
                                    android:checkable="true"
                                    app:chipMinHeight="40dp"
                                    app:chipCornerRadius="20dp"
                                    app:chipBackgroundColor="@color/chip_bg"
                                    app:chipStrokeColor="@color/chip_stroke_color"
                                    app:chipStrokeWidth="2dp"
                                    android:textColor="@color/chip_text_color"
                                    app:checkedIconEnabled="false"
                                    app:ensureMinTouchTargetSize="false" />

                                <com.google.android.material.chip.Chip
                                    android:id="@+id/chipTh"
                                    android:layout_width="40dp"
                                    android:layout_height="40dp"
                                    android:gravity="center"
                                    android:text="@string/chip_th"
                                    android:textSize="12sp"
                                    android:checkable="true"
                                    app:chipMinHeight="40dp"
                                    app:chipCornerRadius="20dp"
                                    app:chipBackgroundColor="@color/chip_bg"
                                    app:chipStrokeColor="@color/chip_stroke_color"
                                    app:chipStrokeWidth="2dp"
                                    android:textColor="@color/chip_text_color"
                                    app:checkedIconEnabled="false"
                                    app:ensureMinTouchTargetSize="false" />

                                <com.google.android.material.chip.Chip
                                    android:id="@+id/chipFr"
                                    android:layout_width="40dp"
                                    android:layout_height="40dp"
                                    android:gravity="center"
                                    android:text="@string/chip_fr"
                                    android:textSize="12sp"
                                    android:checkable="true"
                                    app:chipMinHeight="40dp"
                                    app:chipCornerRadius="20dp"
                                    app:chipBackgroundColor="@color/chip_bg"
                                    app:chipStrokeColor="@color/chip_stroke_color"
                                    app:chipStrokeWidth="2dp"
                                    android:textColor="@color/chip_text_color"
                                    app:checkedIconEnabled="false"
                                    app:ensureMinTouchTargetSize="false" />

                                <com.google.android.material.chip.Chip
                                    android:id="@+id/chipSa"
                                    android:layout_width="40dp"
                                    android:layout_height="40dp"
                                    android:gravity="center"
                                    android:text="@string/chip_sa"
                                    android:textSize="12sp"
                                    android:checkable="true"
                                    app:chipMinHeight="40dp"
                                    app:chipCornerRadius="20dp"
                                    app:chipBackgroundColor="@color/chip_bg"
                                    app:chipStrokeColor="@color/chip_stroke_color"
                                    app:chipStrokeWidth="2dp"
                                    android:textColor="@color/chip_text_color"
                                    app:checkedIconEnabled="false"
                                    app:ensureMinTouchTargetSize="false" />
                            </com.google.android.material.chip.ChipGroup>

                        </LinearLayout>

                    </FrameLayout>

                 </LinearLayout>
            </androidx.core.widget.NestedScrollView>

            <!-- Bottom button bar for page 1 (fixed inside card) -->
            <LinearLayout
                android:id="@+id/buttonBarPage1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="end"
                android:padding="12dp"
                style="?android:attr/buttonBarStyle"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent">

                <Button
                    android:id="@+id/btnCancel"
                    style="?android:attr/buttonBarButtonStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#393D99"
                    android:text="@string/cancel" />

                <Button
                    android:id="@+id/btnNext"
                    style="?android:attr/buttonBarButtonStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="@string/next"
                    android:textColor="#3D3D99" />

            </LinearLayout>

            <!-- Bottom button bar for page 2  -->
            <LinearLayout
                android:id="@+id/buttonBarPage2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="end"
                android:padding="12dp"
                style="?android:attr/buttonBarStyle"
                android:visibility="gone"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent">

                <Button
                    android:id="@+id/btnBack"
                    style="?android:attr/buttonBarButtonStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#393D99"
                    android:text="@string/back" />

                <Button
                    android:id="@+id/btnNextPage2"
                    style="?android:attr/buttonBarButtonStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="@string/next"
                    android:textColor="#3D3D99" />

            </LinearLayout>

            <!-- Bottom button bar for page 3 -->
            <LinearLayout
                android:id="@+id/buttonBarPage3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="end"
                android:padding="12dp"
                style="?android:attr/buttonBarStyle"
                android:visibility="gone"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent">

                <Button
                    android:id="@+id/btnBackPage3"
                    style="?android:attr/buttonBarButtonStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#393D99"
                    android:text="@string/back" />

                <Button
                    android:id="@+id/btnAdd"
                    style="?android:attr/buttonBarButtonStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="@string/add"
                    android:textColor="#3D3D99" />

            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>
